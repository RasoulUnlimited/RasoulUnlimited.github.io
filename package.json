{
  "name": "rasoulunlimited.github.io",
  "version": "1.0.0",
  "description": "Personal website of Mohammad Rasoul Sohrabi (Rasoul Unlimited) â€” Developer, Designer, Content Creator, and Biomedical Engineering student. Built with GitHub Pages",
  "homepage": "https://rasoulunlimited.ir",
  "repository": {
    "type": "git",
    "url": "https://github.com/RasoulUnlimited/RasoulUnlimited.github.io"
  },
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "gulp",
    "build:watch": "gulp watch",
    "dev": "npm run build:watch & npx serve -l 8080 .",
    "start": "npx serve -l 8080 .",
    "lint": "npx htmlhint --config .htmlhintrc.json \"**/*.html\" && npx eslint \"**/*.js\" --ignore-pattern=\"**/node_modules/**\" --ignore-pattern=\"**/dist/**\" --ignore-pattern=\"**/*.min.js\"",
    "lint:fix": "npx eslint \"**/*.js\" --fix --ignore-pattern=\"**/node_modules/**\" --ignore-pattern=\"**/dist/**\" --ignore-pattern=\"**/*.min.js\"",
    "lint:strict": "npm run lint -- --max-warnings=0",
    "test": "npm run lint",
    "test:strict": "npm run lint:strict",
    "audit": "npm audit --production && npm audit fix",
    "audit:prod": "npm audit --production",
    "clean": "rimraf node_modules .eslintcache",
    "precommit": "npm run lint:fix && npm run build"
  },
  "keywords": [
    "portfolio",
    "personal-website",
    "github-pages",
    "developer",
    "rasoul-unlimited",
    "typescript",
    "javascript"
  ],
  "author": "Mohammad Rasoul Sohrabi",
  "email": "rasoul@rasoulunlimited.ir",
  "url": "https://rasoulunlimited.ir",
  "license": "CC-BY-NC-ND-4.0",
  "devDependencies": {
    "@eslint/js": "8.57.1",
    "eslint": "^8.55.0",
    "gulp": "^5.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "htmlhint": "^1.1.4"
  }
}
