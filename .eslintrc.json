{
  "env": {
    "browser": true,
    "es2021": true,
    "node": false,
    "serviceworker": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.min.js",
    "assets/js/include.js",
    "assets/vendor/**"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-var": "error",
    "prefer-const": "warn",
    "eqeqeq": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-with": "error",
    "no-script-url": "error",
    "no-loop-func": "warn",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "consistent-return": "warn",
    "curly": [
      "error",
      "all"
    ],
    "indent": [
      "warn",
      2
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "gulpfile.cjs",
        "cloudflare/worker.js"
      ],
      "env": {
        "node": true,
        "browser": false
      },
      "parserOptions": {
        "sourceType": "commonjs"
      }
    },
    {
      "files": [
        "sw.js"
      ],
      "env": {
        "serviceworker": true,
        "browser": false
      }
    }
  ]
}
